---

<style is:inline is:global>
  :root {
    
  font-family: 'Oxanium Variable', system-ui;

    /* --aw-font-sans:'Anta';
    --aw-font-serif: var(--aw-font-sans);
    --aw-font-heading: var(--aw-font-sans); */

    --aw-color-primary: #007174;
    --aw-color-secondary: #003e3e;
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(0 0 0); 
    --aw-color-text-default: #007174;
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    /* --aw-color-bg-page-dark: rgb(1 108 128);// rgb(3 6 32) #014b59 */

    /* ::selection {background-color:rgb(0, 149, 255); color: lavender;} */

  }

  .dark {
    font-family: 'Oxanium Variable', system-ui;
    
    --aw-color-primary: #1db9be;
    --aw-color-secondary: #008282 ;
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(60, 60, 60); 
    --aw-color-text-default: rgb(166, 220, 197);
    --aw-color-text-muted: rgb(175, 243, 247);
    --aw-color-bg-page:#1e1e1e;

    /* ::selection {background-color: black; color: snow} */

  }
</style>

