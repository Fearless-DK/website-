            </div>
            
          )
        }
        {
          image4 && (
            <div class="mySlides relative m-auto max-w-5xl">
    
              
  
                <Image
      
                  class="animate-fadeIn scale-105 mx-auto rounded-full bg-gradient-to-bl from-cyan-300 to-emerald-700 dark:bg-gradient-to-r dark:from-slate-800  dark:to-sky-500 p-5 w-full"
